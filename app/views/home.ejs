<%- include('partials/header') %>

    <!-- MAIN -->
    <main class="container my-5 flex-grow-1">
        <!-- BIENVENUE -->
        <div class="row align-items-center mb-5">
            <div class="col-12 col-md-6 text-center text-md-start mb-4 mb-md-0">
                <h2 class="h3">Bienvenue sur O’Coffee</h2>
                <p>Découvrez notre sélection de cafés venus du monde entier, torréfiés avec soin.</p>
                <a href="/catalog" class="btn btn-coffee mt-3">Voir le catalogue</a>
            </div>
            <div class="col-12 col-md-6 text-center">
                <img src="/images/assets/about.jpg" alt="Image café" class="img-fluid rounded shadow" />
            </div>
        </div>

        <!-- NOUVEAUTÉS -->
        <section class="my-5">
            <h2 class="text-center mb-4">Nouveautés</h2>

            <!-- Carrousel (mobile uniquement) -->
            <div class="d-md-none">
                <div id="carouselNouveautes" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <% lastCoffees.forEach((coffee, index)=> { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <img src="/images/assets/coffees/<%= coffee.image %>" class="d-block w-100 rounded"
                                    alt="<%= coffee.name %>">
                                <div class="carousel-caption d-block bg-overlay p-4 rounded">
                                    <h5 class="card-title">
                                        <%= coffee.name %>
                                    </h5>
                                    <p class="card-text">
                                        <%= coffee.description %>
                                    </p>
                                    <a href="/catalog/<%= coffee.slug || coffee.id %>"
                                        class="btn btn-coffee mt-2">Découvrir</a>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>

            <!-- Grille (desktop uniquement) -->
            <div class="row row-cols-1 row-cols-md-3 g-4 d-none d-md-flex">
                <% lastCoffees.forEach(coffee=> { %>
                    <div class="col">
                        <div class="desktop-coffee-card">
                            <img src="/images/assets/coffees/<%= coffee.image %>" alt="<%= coffee.name %>">
                            <div class="desktop-coffee-overlay">
                                <h5>
                                    <%= coffee.name %>
                                </h5>
                                <p class="small">
                                    <%= coffee.description %>
                                </p>
                                <a href="/catalog/<%= coffee.reference %>" class="btn btn-coffee mt-2">Découvrir</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>